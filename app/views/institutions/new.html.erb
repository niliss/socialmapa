<div class="well col-md-6 col-md-offset-3">
  
  <h1>Nueva fundaci&oacute;n</h1>

  <%= bootstrap_form_for :institution do |f| %>
    <div class="col-md-6">
      <p>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.select :categories, Institution.categories.keys.to_a.map { |w| [w.humanize, w] }%>
      </p>
      <p>
        <%= f.telephone_field :phone %>
      </p>
      <p>
        <%= f.text_field :address %>
      </p>
      <p>
        <%= f.email_field :email %>
      </p>
      <p>
        <%= f.url_field :website %>
      </p>
    </div>
   
    <div class="col-md-6">
      <p>
        <%= f.text_field :picture %>
      </p>
      <p>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.submit "Enviar", class: "btn btn-primary" %>
      </p>
    </div>
    
  <% end %>

  
</div>
